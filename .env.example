# Core app
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-strong-random-secret
AUTH_SECRET=replace-with-strong-random-secret
AUTH_TRUST_HOST=true

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=replace-with-strong-db-password
POSTGRES_DB=risebyeden
DATABASE_URL=postgresql://postgres:replace-with-strong-db-password@localhost:5432/risebyeden?schema=public

# Cache (Valkey/Redis)
VALKEY_URL=redis://localhost:6379
# REDIS_URL can be used as a fallback if VALKEY_URL is not set
REDIS_URL=
CACHE_DEBUG=false

# Notifications
CONSULTATION_NOTIFY_TO=ops@example.com

# Auth rate limits (milliseconds / attempts)
AUTH_RATE_LIMIT_WINDOW_MS=300000
AUTH_RATE_LIMIT_MAX_ATTEMPTS=8
AUTH_RATE_LIMIT_BLOCK_MS=900000
ENLIST_RATE_LIMIT_WINDOW_MS=300000
ENLIST_RATE_LIMIT_MAX_ATTEMPTS=6
ENLIST_RATE_LIMIT_BLOCK_MS=900000

# SMTP (optional, required only if consultation emails should be sent)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
SMTP_FROM=noreply@example.com

# Sentry (optional)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
